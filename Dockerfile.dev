FROM python:3.11-slim

# Устанавливаем системные зависимости
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libpq-dev \
    libjpeg-dev \
    zlib1g-dev \
    libfreetype6-dev \
    liblcms2-dev \
    libopenjp2-7-dev \
    libtiff5-dev \
    libwebp-dev \
    curl \
    netcat-openbsd \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Устанавливаем переменные окружения
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV PATH="/home/homeinventory/.local/bin:${PATH}"

WORKDIR /app

# Копируем зависимости
COPY requirements.txt .

# Устанавливаем Python зависимости
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Создаем пользователя
RUN useradd -m -u 1001 homeinventory && \
    chown -R homeinventory:homeinventory /app

USER homeinventory

# Копируем код (при монтировании будет перезаписан)
COPY --chown=homeinventory:homeinventory . .

# Создаем необходимые директории
RUN mkdir -p /app/static /app/media /app/logs

EXPOSE 8000

# Для разработки запускаем стандартный runserver
CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]